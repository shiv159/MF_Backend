<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring profile-specific configurations -->
    <springProfile name="dev">
        <property name="LOG_LEVEL" value="DEBUG"/>
        <property name="APP_LOG_LEVEL" value="DEBUG"/>
        <property name="SECURITY_LOG_LEVEL" value="DEBUG"/>
        <property name="HIBERNATE_SQL_LOG_LEVEL" value="DEBUG"/>
        <property name="HIBERNATE_BIND_LOG_LEVEL" value="TRACE"/>
        <property name="WS_STATS_LOG_LEVEL" value="INFO"/>
        <property name="LOG_FILE" value="logs/mutual-fund-app.log"/>
    </springProfile>
    
    <springProfile name="default,prod">
        <property name="LOG_LEVEL" value="INFO"/>
        <property name="APP_LOG_LEVEL" value="INFO"/>
        <property name="SECURITY_LOG_LEVEL" value="INFO"/>
        <property name="HIBERNATE_SQL_LOG_LEVEL" value="WARN"/>
        <property name="HIBERNATE_BIND_LOG_LEVEL" value="WARN"/>
        <property name="WS_STATS_LOG_LEVEL" value="WARN"/>
        <property name="LOG_FILE" value="logs/mutual-fund-app.log"/>
    </springProfile>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-15thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- File Appender with Rolling Policy -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-15thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Rolling Policy: Size-based and Time-based -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rollover daily or when file size reaches 10MB -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- Logger Configuration -->
    
    <!-- Application specific loggers -->
    <logger name="com.mutualfunds.api" level="${APP_LOG_LEVEL}"/>
    <logger name="com.mutualfunds.api.mutual_fund.controller" level="${APP_LOG_LEVEL}"/>
    <logger name="com.mutualfunds.api.mutual_fund.service" level="${APP_LOG_LEVEL}"/>
    <logger name="com.mutualfunds.api.mutual_fund.exception" level="${APP_LOG_LEVEL}"/>
    
    <!-- Spring Framework loggers -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="${SECURITY_LOG_LEVEL}"/>
    <logger name="org.springframework.data" level="INFO"/>
    <logger name="org.springframework.web.socket.config.WebSocketMessageBrokerStats" level="${WS_STATS_LOG_LEVEL}"/>
    
    <!-- Hibernate/JPA loggers -->
    <logger name="org.hibernate.SQL" level="${HIBERNATE_SQL_LOG_LEVEL}"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="${HIBERNATE_BIND_LOG_LEVEL}"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="${HIBERNATE_BIND_LOG_LEVEL}"/>
    <logger name="org.springframework.orm.jpa" level="INFO"/>
    
    <!-- External libraries -->
    <logger name="org.springframework.boot" level="INFO"/>
    <logger name="org.apache" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- Root Logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </root>
</configuration>
